#include <stdio.h>

void hitungDaya() {
    float V, I, P;
    
    printf("\n--- Perhitungan Daya Listrik ---\n");
    printf("Masukkan nilai Tegangan (V) dalam Volt: ");
    scanf("%f", &V);
    printf("Masukkan nilai Arus (I) dalam Ampere: ");
    scanf("%f", &I);
    
    if (V < 0 || I < 0) {
        printf("Error: Nilai tidak boleh negatif!\n");
        return;
    }
    
    P = V * I;
    
    printf("\n=== HASIL PERHITUNGAN ===\n");
    printf("Rumus: P = V × I\n");
    printf("P = %.2f V × %.2f A\n", V, I);
    printf("Daya Listrik (P) = %.2f Watt\n\n", P);
}

void hitungTegangan() {
    float V, I, P;
    
    printf("\n--- Perhitungan Tegangan ---\n");
    printf("Masukkan nilai Daya (P) dalam Watt: ");
    scanf("%f", &P);
    printf("Masukkan nilai Arus (I) dalam Ampere: ");
    scanf("%f", &I);
    
    if (I <= 0) {
        printf("Error: Arus harus lebih besar dari nol!\n");
        return;
    }
    
    V = P / I;
    
    printf("\n=== HASIL PERHITUNGAN ===\n");
    printf("Rumus: V = P / I\n");
    printf("V = %.2f W / %.2f A\n", P, I);
    printf("Tegangan (V) = %.2f Volt\n\n", V);
}

void hitungArus() {
    float V, I, P;
    
    printf("\n--- Perhitungan Arus ---\n");
    printf("Masukkan nilai Daya (P) dalam Watt: ");
    scanf("%f", &P);
    printf("Masukkan nilai Tegangan (V) dalam Volt: ");
    scanf("%f", &V);
    
    if (V <= 0) {
        printf("Error: Tegangan harus lebih besar dari nol!\n");
        return;
    }
    
    I = P / V;
    
    printf("\n=== HASIL PERHITUNGAN ===\n");
    printf("Rumus: I = P / V\n");
    printf("I = %.2f W / %.2f V\n", P, V);
    printf("Arus (I) = %.2f Ampere\n\n", I);
}

int main() {
    int pilihan;
    char lanjut;
    
    do {
        printf("=========================================\n");
        printf("    KALKULATOR DAYA LISTRIK LENGKAP\n");
        printf("          (P = V × I)\n");
        printf("=========================================\n\n");
        
        printf("Pilih jenis perhitungan:\n");
        printf("1. Hitung Daya (P) dari V dan I\n");
        printf("2. Hitung Tegangan (V) dari P dan I\n");
        printf("3. Hitung Arus (I) dari P dan V\n");
        printf("Masukkan pilihan (1-3): ");
        scanf("%d", &pilihan);
        
        switch(pilihan) {
            case 1:
                hitungDaya();
                break;
            case 2:
                hitungTegangan();
                break;
            case 3:
                hitungArus();
                break;
            default:
                printf("Pilihan tidak valid!\n");
                break;
        }
        
        printf("Apakah ingin melakukan perhitungan lagi? (y/n): ");
        scanf(" %c", &lanjut);
        
    } while(lanjut == 'y' || lanjut == 'Y');
    
    printf("\n=========================================\n");
    printf("Terima kasih telah menggunakan kalkulator!\n");
    printf("=========================================\n");
    
    return 0;
}
