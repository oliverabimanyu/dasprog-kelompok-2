#include <stdio.h>

int main() {
    int n, i;
    float R, R_total = 0;
    
    printf("=========================================\n");
    printf("     KALKULATOR RESISTOR SERI\n");
    printf("    Rtotal = R1 + R2 + ... + Rn\n");
    printf("=========================================\n\n");
    
    // Input jumlah resistor
    printf("Masukkan jumlah resistor: ");
    scanf("%d", &n);
    
    // Validasi jumlah resistor
    if (n <= 0) {
        printf("Error: Jumlah resistor harus lebih dari 0!\n");
        return 1;
    }
    
    printf("\n=== MASUKKAN NILAI RESISTOR ===\n");
    
    // Loop untuk input nilai setiap resistor
    for (i = 1; i <= n; i++) {
        printf("Masukkan nilai resistor R%d (Ohm): ", i);
        scanf("%f", &R);
        
        // Validasi nilai resistor
        if (R < 0) {
            printf("Error: Nilai resistor tidak boleh negatif!\n");
            i--; // Mengulang input untuk resistor yang sama
            continue;
        }
        
        R_total += R; // Menambahkan ke total
    }
    
    // Menampilkan hasil perhitungan
    printf("\n=== HASIL PERHITUNGAN ===\n");
    printf("Jumlah resistor: %d\n", n);
    printf("Rumus: Rtotal = R1 + R2 + ... + Rn\n");
    
    // Menampilkan semua resistor yang diinput
    printf("Resistor yang dihitung: ");
    for (i = 1; i <= n; i++) {
        // Untuk menampilkan kembali nilai resistor, kita perlu menyimpannya
        // Dalam versi sederhana ini, kita hanya menampilkan format
        if (i == n) {
            printf("Rn");
        } else {
            printf("R%d + ", i);
        }
    }
    
    printf("\nHambatan total (Rtotal) = %.2f Ohm\n", R_total);
    
    // Informasi tambahan
    printf("\n=== INFORMASI TAMBAHAN ===\n");
    printf("Karakteristik rangkaian seri:\n");
    printf("- Arus yang mengalir sama melalui semua resistor\n");
    printf("- Tegangan terbagi di setiap resistor\n");
    printf("- Hambatan total selalu lebih besar dari resistor terbesar\n");
    
    printf("\n=========================================\n");
    printf("Terima kasih telah menggunakan kalkulator!\n");
    printf("=========================================\n");
    
    return 0;
}
